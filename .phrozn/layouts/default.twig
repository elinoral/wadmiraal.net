<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>{{ entry.title }} | wadmiraal.net</title>
	<meta name="description" content="{{ entry.description }}">
	<meta name="author" content="Wouter Admiraal">

	<meta name="viewport" content="width=device-width,initial-scale=1">

	<link rel="stylesheet" href="/styles/html5boilerplate.css">
	<link rel="stylesheet" href="/styles/default.css" />

	<!--[if lt IE 9]>
	<script src="/scripts/modernizr-2.0.6.min.js"></script>
	<![endif]-->
</head>
<body>
	<div id="main">
  	<header id="header">
      <nav id="left">
        <a href="/">wadmiraal.net</a>
      </nav>

      <nav id="right">
      	<a href="/lore/">lore</a>&nbsp;&nbsp;<a href="/about/">about</a>&nbsp;&nbsp;<a href="http://www.twitter.com/wadmiraal">twitter</a>&nbsp;&nbsp;<a href="http://github.com/wadmiraal">github</a>
      </nav>

      <nav id="lore-nav">
      	{% if entry.prev %}
					<a href="/{{ entry.prev }}">&lt; previous</a>
				{% endif %}

				{% if entry.prev %}
					{% if entry.next %}
					&nbsp;|&nbsp;
					{% endif %}
				{% endif %}

				{% if entry.next %}
					<a href="/">next &gt;</a>
				{% endif %}
      </nav>
    </header>

		<div id="content">
			<article>
				<h1>{{ entry.title }}</h1>

        {% if entry.date %}
				  <p class="published-info">Published on <time>{{ entry.date }}</time></p>
        {%endif %}

				{{ content }}
			</article>

      <div id="disqus_thread"></div>
      <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'wadmiraalnet'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

      <footer>
        <a href="#">Back to top</a>
      </footer>
		</div>
	</div>
</body>
</html>
